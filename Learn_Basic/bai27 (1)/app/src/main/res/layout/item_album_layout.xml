<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStt"
        android:text="1"
        android:textSize="26dp"
        android:layout_margin="8dp"
        android:background="#E8DCAE"
        ></TextView>

    <TextView
        android:id="@+id/tvCodeItemAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvStt"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#AEE8D1"
        android:text="124"
        android:textSize="26dp"></TextView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvNameItemAlbum"
        android:textSize="26dp"
        android:layout_margin="8dp"
        android:layout_alignLeft="@+id/tvCodeItemAlbum"
        android:background="#E8B0AE"
        ></TextView>



</RelativeLayout>